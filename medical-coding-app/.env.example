# Environment Configuration Template
# Copy this file to .env and fill in your actual values

# Flask Configuration
SECRET_KEY=your-secret-key-here
FLASK_DEBUG=1
PORT=8080

# Database Configuration
DATABASE_URL=sqlite:///site.db

# UMLS Configuration
UMLS_PATH=umls_data
UMLS_API_KEY=your-umls-api-key

# Google OAuth Configuration
# Get these from Google Cloud Console > APIs & Credentials > OAuth 2.0 Client IDs
GOOGLE_CLIENT_ID=your-google-client-id.googleusercontent.com
GOOGLE_CLIENT_SECRET=your-google-client-secret

# Authorized Users (UMLS License Compliance)
# Comma-separated list of Gmail addresses authorized to access UMLS data
# Only users with valid UMLS licenses should be included
AUTHORIZED_USERS=researcher@university.edu,doctor@hospital.org,student@medschool.edu

# Cloud Storage Configuration (for Cloud Run)
UMLS_GCS_BUCKET=your-bucket-name